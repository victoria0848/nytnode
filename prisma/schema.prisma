generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id           Int @id @default(autoincrement())
  firstname    String
  lastname     String
  email        String @unique
  password     String
  role         Role
  isActive     Boolean @default(false)
  @@map("users")
}



model Fueltype {
  id    Int     @id @default(autoincrement())
  name  String
  cars  Car[]
}

model Brand {
  id         Int    @id @default(autoincrement())
  name       String
  logoUrl    String @default("")

  cars Car[]
  @@map("brands")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  
  cars  Car[]

  @@map("categories")
}

model Car {
  id        Int    @id @default(autoincrement())
  categoryId  Int
  brandId   Int
  model     String
  year      Int
  price     Decimal @db.Decimal(10, 2)
  fueltypeId  Int

  category     Category   @relation(fields: [categoryId], references: [id])
  brand     Brand   @relation(fields: [brandId], references: [id])
  fueltype     Fueltype   @relation(fields: [fueltypeId], references: [id])

  @@map("cars")


}